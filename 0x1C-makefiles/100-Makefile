#100-Makefile - First make file with all and CC, SRC, OBJ, NAME, RM and .PHONY variables
CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=main.c holberton.c
OBJ=$(SRC:.c=.o)
NAME=holberton
RM=rm -f
.PHONY : all clean oclean fclean re
all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean

re: oclean all
